<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/com.sp.android.views"
              android:layout_width="match_parent"
              android:layout_height="250dp"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/record_separator"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/record_column_gray_background"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">


        <TextView
            android:id="@+id/txt_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/str_dialog_cancel"
            android:textColor="@color/text_black"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_current_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/str_dialog_back_now_month"
            android:textColor="@color/blue"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/txt_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/str_dialog_confirm"
            android:textColor="@color/blue"
            android:textSize="17sp"/>

    </RelativeLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="@color/record_separator"/>

    <com.sp.android.views.PickerView
        android:id="@+id/picker_list"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:dividerColor="@color/record_separator"
        app:dividerDisplay="simple"
        app:dividerWidth="1.0"
        app:highlightTextColor="@color/text_black"
        app:highlightTextSize="19sp"
        app:lineHeight="40dp"
        app:loop="false"
        app:textColor="@color/text_gray"
        app:textSize="16sp"/>
</LinearLayout>