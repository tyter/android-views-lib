<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/title_bar_height"
              android:gravity="center_vertical"
              android:background="@color/title_bar">
    <ImageView
        android:id="@+id/img_title_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/title_bar_padding_top"
        android:paddingBottom="@dimen/title_bar_padding_top"
        android:paddingLeft="@dimen/title_bar_padding_left"
        android:paddingRight="@dimen/title_bar_padding_left"
        android:layout_centerVertical="true"
        android:src="@drawable/btn_back"/>
    <TextView
        android:id="@+id/txt_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/white"
        android:text="@string/title"/>
    <TextView
        android:id="@+id/txt_title_bar_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>
</RelativeLayout>