<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linear_layout_menu_item"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minHeight="@dimen/menu_item_height"
    android:gravity="left|center_vertical"
    android:paddingLeft="@dimen/menu_item_left_padding">
    <ImageView
        android:id="@+id/img_menu_item_icon"
        android:layout_width="@dimen/menu_item_icon"
        android:layout_height="@dimen/menu_item_icon"/>
    <TextView
        android:id="@+id/txt_menu_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/menu_icon_margin"/>
</LinearLayout>